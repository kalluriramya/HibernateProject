<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
<property name="hibernate.connection.url">jdbc:postgresql://localhost:5433/MyDB</property>
<property name="hibernate.connection.username">postgres</property>
<property name="hibernate.connection.password">postgres</property>
<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
<property name="show_sql">true</property>
<property name="hibernate.hbm2ddl.auto">update</property>
<mapping class="com.training.java.ContactPOJO" /> 
<mapping class="com.training.java.WriterPOJO" /> 
<mapping class="com.training.java.StoryPOJO" /> 
<mapping class="com.training.java.EventPOJO" /> 
<mapping class="com.training.java.SpeakerPOJO" /> 
<mapping class="com.training.java.PublisherPOJO" /> 
<mapping class="com.training.java.BookPOJO" /> 
</session-factory>
</hibernate-configuration>
